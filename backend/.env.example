# Server Configuration
PORT=5000
FRONTEND_URL=http://localhost:5173

# Firebase Configuration
# Option 1: Base64 encoded service account (for deployment)
FIREBASE_CRED_BASE64=your_base64_encoded_firebase_credentials

# Option 2: The server will also look for serviceAccountKey.json in the backend folder

# Admin Credentials (do not expose in client code)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# JWT Secret for admin sessions
JWT_SECRET=your_super_secret_jwt_key_here

# Email Configuration (Gmail SMTP)
# To get an app password: https://myaccount.google.com/apppasswords
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=OpenLearn Hub <noreply@openlearnhub.com>

# =============================================================================
# AI Assistant Configuration (Python Backend - Port 5050)
# =============================================================================

# Active AI Provider: "gemini" or "groq"
ACTIVE_PROVIDER=gemini

# Optional: Override the default model for the active provider
# Gemini models: gemini-1.5-flash, gemini-1.5-pro, gemini-2.0-flash
# Groq models: llama-3.3-70b-versatile, llama-3.1-8b-instant, meta-llama/llama-4-scout-17b-16e-instruct
ACTIVE_MODEL=

# Gemini API Key (also used by existing frontend AI features)
# Get from: https://aistudio.google.com/apikey
GOOGLE_API_KEY=your_gemini_api_key_here

# Groq API Key (optional, for Groq provider)
# Get from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# Flask server settings (AI Assistant runs on 5050 to avoid conflict with Node.js)
FLASK_HOST=127.0.0.1
FLASK_PORT=5050
FLASK_DEBUG=True

# Enable demo mode (returns mock responses without API calls)
DEMO_MODE=False
