# Server Configuration
PORT=5000

# Firebase Configuration (Base64 encoded service account key)
# To generate: Convert your servicekey.json to base64 string
# PowerShell: $bytes = [System.IO.File]::ReadAllBytes("path\to\servicekey.json"); [System.Convert]::ToBase64String($bytes)
FIREBASE_SERVICE_ACCOUNT_BASE64=your_base64_encoded_firebase_service_account_key_here

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173
